<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ifl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/card_background"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/iv_blur_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_base_info"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="3dp">

                    <ImageView
                        android:id="@+id/iv_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/img_cover"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_cover_default" />


                    <FrameLayout
                        android:id="@+id/fl_update_switch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#78000000"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_update_switch"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_update_forbidden"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="@string/update_off"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            tools:ignore="SmallSp" />

                    </FrameLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:gravity="center|start"
                            android:singleLine="true"
                            android:text="@string/tv_book_name"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            app:minTextSize="14sp"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/author"
                            android:paddingTop="1dp"
                            android:src="@drawable/ic_author_black_24dp" />

                        <TextView
                            android:id="@+id/tv_author"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_weight="1"
                            android:lines="1"
                            android:paddingEnd="6dp"
                            android:text="@string/author"
                            android:textColor="#dfdfdf"
                            android:textSize="14sp"
                            tools:ignore="RtlSymmetry" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/book_source"
                            android:paddingTop="1dp"
                            android:src="@drawable/ic_source_black_24dp" />

                        <TextView
                            android:id="@+id/tv_origin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_weight="1"
                            android:lines="1"
                            android:paddingRight="6dp"
                            android:text="@string/origin"
                            android:textColor="#dfdfdf"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                        <ImageView
                            android:id="@+id/iv_change_origin"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/change_origin"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/ic_exchange"
                            android:tint="@color/color_change_source" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_chapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="@string/read_dur_progress"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/fl_bottom"
                android:layout_below="@id/ll_base_info"
                android:background="@color/card_background"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbars="vertical"
                    android:text="@string/book_intro"
                    android:textColor="@color/tv_text_default"
                    android:textSize="15sp" />
            </FrameLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/ll_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="-14dp"
                android:contentDescription="@string/add_collection"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:tint="@color/white"
                app:fabCustomSize="38dp" />

            <FrameLayout
                android:id="@+id/fl_bottom"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_shelf_zg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_book_detail_shelf_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_addbook"
                            android:tint="@color/colorAccent"
                            android:tintMode="src_atop" />

                        <TextView
                            android:id="@+id/tv_shelf_zg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:text="@string/add_from_bookshelf_zg"
                            android:textColor="@color/tv_text_default"
                            android:textSize="14sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_read"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_book_detail_read_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_readbook"
                            android:tint="@color/white"
                            android:tintMode="src_atop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:text="@string/start_read"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_shelf_yf"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_book_detail_shelf_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_addbook"
                            android:tint="@color/colorAccent"
                            android:tintMode="src_atop" />

                        <TextView
                            android:id="@+id/tv_shelf_yf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:text="@string/add_from_bookshelf_yf"
                            android:textColor="@color/tv_text_default"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_book_detail_shelf_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.victor.loading.rotate.RotateLoading
                        android:id="@+id/rl_loading"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:loading_color="#767676"
                        app:loading_width="2dp" />

                    <TextView
                        android:id="@+id/tv_loading_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="@string/data_loading"
                        android:textColor="#767676"
                        android:textSize="16sp" />
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>