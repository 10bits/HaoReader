<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_card"
    style="@style/AppTheme.CardView.Item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_cover_default"
            android:transitionName="@string/img_cover"
            tools:targetApi="lollipop" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@+id/fl_has_new"
            android:layout_toEndOf="@+id/iv_cover"
            android:paddingStart="12dp"
            android:paddingEnd="2dp"
            android:singleLine="true"
            android:text="@string/tv_book_name"
            android:textColor="@color/tv_text_default"
            android:textSize="16sp"
            app:minTextSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="2dp"
            android:layout_below="@id/tv_name"
            android:layout_toStartOf="@+id/fl_has_new"
            android:layout_toEndOf="@+id/iv_cover"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="6dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:paddingEnd="2dp"
                android:contentDescription="@string/author"
                android:src="@drawable/ic_author_black_24dp"
                app:tint="@color/tv_text_secondary"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:paddingEnd="6dp"
                android:text="@string/author"
                android:textColor="@color/tv_text_secondary"
                android:textSize="13sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>


        <FrameLayout
            android:id="@+id/fl_has_new"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/iv_has_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:src="@drawable/ic_circle_red_24dp"
                android:visibility="invisible" />

            <com.victor.loading.rotate.RotateLoading
                android:id="@+id/rl_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:loading_color="@color/colorAccent"
                app:loading_width="2dp" />

        </FrameLayout>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_read"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/tv_last"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/iv_cover"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:singleLine="true"
            android:text="@string/read_dur_progress"
            android:textColor="@color/tv_text_summary"
            android:textSize="12sp"
            app:minTextSize="10sp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_last"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/ll_author"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/iv_cover"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:singleLine="true"
            android:text="@string/book_search_last"
            android:textColor="@color/tv_text_summary"
            android:textSize="12sp"
            app:minTextSize="10sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="2dp"
            android:gravity="center_vertical"
            android:layout_toEndOf="@id/iv_cover"
            android:layout_below="@+id/tv_read"
            android:orientation="horizontal">
            <com.monke.mprogressbar.MHorProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:id="@+id/mpb_durProgress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:visibility="invisible"
                app:bgdrawable="@color/progress_back_color"
                app:cantouch="false"
                app:fontdrawable="@color/colorAccent"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_current_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingStart="2dp"
                android:paddingEnd="0dp"
                android:textSize="8sp"
                android:textColor="@color/progress_text_color"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
