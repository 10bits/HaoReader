<?xml version="1.0" encoding="utf-8"?>
<com.monke.monkeybook.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/card_background"
    android:foreground="?attr/selectableItemBackground">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription" />

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/image_rb_checker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:theme="@style/Widget.AppCompat.CompoundButton.Light" />

</com.monke.monkeybook.widget.SquareRelativeLayout>
